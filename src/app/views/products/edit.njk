{% extends 'layout.njk' %}

{% block content %}

  <section class="container form">
    <form class="" action="/products?_method=PUT" method="POST">
      <div class="header">
        <h3>Editar produto {{product.id}}</h3>
      </div>

      <div class="fields">
        {% include 'products/fields.njk' %}
        <input type="hidden" name="id" value={{product.id}}>
      </div>

      <button type="submit" class="button edit">Atualizar</button>
    </form>

    <form id="form-delete" action="/products?_method=DELETE" method="POST">
      <input type="hidden" name="id" value={{product.id}}>
      <button class="button delete" type="submit">Deletar</button>
    </form>
  </section>

{% endblock %}